<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        android:id="@+id/results_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/solution_tv"
            android:textSize="34dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_above="@id/result_tv"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/result_tv"
            android:text="0"
            android:textSize="76dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_above="@id/buttons_layout"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:background="#1D2B53"
        android:paddingVertical="16dp"
        android:gravity="center"
        android:id="@+id/buttons_layout">
<!--first row buttons-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="46dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="18sp"
               android:textColor="@color/white"
               android:layout_margin="4dp"
               android:backgroundTint="#FF004D"
               android:id="@+id/button_c"
               android:text="C"/>

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="46dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="18sp"
               android:textColor="@color/white"
               android:layout_margin="4dp"
               android:backgroundTint="#BCBCBC"
               android:id="@+id/button_open_bracket"
               android:text="("/>

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="46dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="18sp"
               android:textColor="@color/white"
               android:layout_margin="4dp"
               android:backgroundTint="#FFBCBCBC"
               android:id="@+id/button_close_bracket"
               android:text=")"/>

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="46dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="18sp"
               android:textColor="@color/white"
               android:layout_margin="4dp"
               android:backgroundTint="#F8E559"
               android:id="@+id/button_divide"
               android:text="/"/>
       </LinearLayout>
<!--second row buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_7"
                android:text="7"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_8"
                android:text="8"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_9"
                android:text="9"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:backgroundTint="#F8E559"
                android:id="@+id/button_multiply"
                android:text="*"/>
        </LinearLayout>
<!--third row buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_4"
                android:text="4"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_5"
                android:text="5"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_6"
                android:text="6"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:backgroundTint="#F8E559"
                android:id="@+id/button_plus"
                android:text="+"/>
        </LinearLayout>
<!--fourth row buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_1"
                android:text="1"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_2"
                android:text="2"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_3"
                android:text="3"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:backgroundTint="#F8E559"
                android:id="@+id/button_minus"
                android:text="-"/>
        </LinearLayout>
<!--fifth row buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:backgroundTint="#FF004D"
                android:id="@+id/button_ac"
                android:text="AC"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_0"
                android:text="0"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#454343"
                android:layout_margin="4dp"
                android:id="@+id/button_dot"
                android:text="."/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="46dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:backgroundTint="#F8E559"
                android:id="@+id/button_equal"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>